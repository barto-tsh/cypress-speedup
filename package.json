{
  "name": "bc-linkshare-damian-zapalski",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build:ci": "cross-env REACT_APP_CI=1 react-scripts build",
    "coverage": "cross-env NODE_ICU_DATA=node_modules/full-icu react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" && echo \"lint success\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx}\" && echo \"lint success\"",
    "start": "react-scripts start",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu react-scripts test",
    "plop": "plop",
    "translations": "babelsheet generate --path ./src/i18n/data && node \"scripts/flatten-translations.js\"",
    "serve": "./node_modules/.bin/http-server ./build --port 1337",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --headless --browser chrome",
    "cy:run:firefox": "cypress run --headless --browser firefox",
    "cy:run:edge": "cypress run --headless --browser edge",
    "cy:run:changed": "zx ./scripts/e2e.mjs",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "auto-changelog": {
    "issueUrl": "https://headstart.atlassian.net/browse/{id}",
    "issuePattern": "[A-Z]+-[1-9]+"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{css,pcss,scss}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!hex-rgb)"
    ]
  },
  "dependencies": {
    "@react-hook/window-size": "3.0.7",
    "@sentry/browser": "6.1.0",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.0.3",
    "@testing-library/user-event": "12.7.1",
    "@types/flat": "5.0.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.28",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/react-router-dom": "5.1.7",
    "autoprefixer": "9.8.0",
    "axios": "0.18.1",
    "clsx": "1.1.1",
    "flat": "5.0.2",
    "hex-rgb": "5.0.0",
    "md5": "2.3.0",
    "query-string": "7.0.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "7.15.4",
    "react-intl": "5.12.3",
    "react-paginate": "7.1.3",
    "react-query": "3.24.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.2",
    "react-tag-autocomplete": "6.3.0",
    "react-test-renderer": "17.0.1",
    "react-toastify": "8.0.3",
    "styled-breakpoints": "10.0.1",
    "styled-components": "5.3.1",
    "typescript": "4.1.5",
    "use-query-params": "1.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/md5": "2.3.1",
    "@types/react-paginate": "7.1.1",
    "@types/react-tag-autocomplete": "6.1.1",
    "@types/styled-components": "5.1.14",
    "@types/testing-library__jest-dom": "5.9.5",
    "@welldone-software/why-did-you-render": "6.0.5",
    "auto-changelog": "2.2.1",
    "babelsheet": "1.5.0",
    "cross-env": "7.0.3",
    "cypress": "8.6.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jest-dom": "3.6.5",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-testing-library": "3.10.1",
    "full-icu": "1.3.1",
    "http-server": "0.12.3",
    "husky": "^7.0.0",
    "inquirer-directory": "2.2.0",
    "lint-staged": "10.5.4",
    "miragejs": "0.1.41",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "plop": "2.7.4",
    "prettier": "2.2.1",
    "stylelint": "13.10.0",
    "stylelint-config-recommended": "3.0.0",
    "wait-on": "5.2.1",
    "zx": "4.2.0"
  }
}
